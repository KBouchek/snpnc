<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.snpnc.snpnc.MainActivity"
    tools:showIn="@layout/activity_main">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/lin1"
        >

    <Button
        android:id="@+id/btnRegion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="To Fly IR"
        android:layout_alignParentTop="true"
        android:background="@drawable/buttonshape"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginTop="10dp"
        />

        <Button
            android:id="@+id/btnDest"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Escales"
            android:layout_alignParentTop="true"
            android:background="@drawable/buttonshape"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginTop="10dp"
            android:layout_below="@id/btnRegion"
            />

        <Button
            android:id="@+id/btnOn"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="On"
            android:layout_alignParentTop="true"
            android:background="@drawable/buttonshape"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginTop="10dp"
            android:layout_below="@id/btnDest"
            />

        <Button
            android:id="@+id/btnVols"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Vols"
            android:layout_alignParentTop="true"
            android:background="@drawable/buttonshape"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginTop="10dp"
            android:layout_below="@id/btnOn"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/lin11"
            android:visibility="gone"
            >

    <Button
        android:id="@+id/btnVoppp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Vols"
        android:layout_alignParentTop="true"
        android:background="@drawable/buttonshape"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btnVols"
        />
    <Button
        android:id="@+id/btnVoplllpp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Vols"
        android:layout_alignParentTop="true"
        android:background="@drawable/buttonshape"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btnVoppp"
        />
    <Button
        android:id="@+id/btnVoplllkkklpp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Vols"
        android:layout_alignParentTop="true"
        android:background="@drawable/buttonshape"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btnVoplllpp"
        />
    <Button
        android:id="@+id/btnVoplllkkklkkkpp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Vols"
        android:layout_alignParentTop="true"
        android:background="@drawable/buttonshape"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btnVoplllkkklpp"
        />
    <Button
    android:id="@+id/btnVoplllkkkkkklpp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#FFFFFF"
    android:text="Vols"
    android:layout_alignParentTop="true"
    android:background="@drawable/buttonshape"
    android:layout_marginLeft="@dimen/fab_margin"
    android:layout_marginRight="@dimen/fab_margin"
    android:layout_marginTop="10dp"
    android:layout_below="@id/btnVoplllkkklkkkpp"
    />

    <Button
        android:id="@+id/btnVoplllkkkkkkooolpp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Vols"
        android:layout_alignParentTop="true"
        android:background="@drawable/buttonshape"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btnVoplllkkkkkklpp"
        />
    <Button
        android:id="@+id/btnVoplllkkkkuuukkooolpp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Vols"
        android:layout_alignParentTop="true"
        android:background="@drawable/buttonshape"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btnVoplllkkkkkkooolpp"
        />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/lin2"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            >
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shrinkColumns="*"
                android:stretchColumns="*"
                android:background="#ffffff">


                <!-- Row 1 with single column -->
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal">


                    <TextView
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:textSize="18dp" android:text="Row 1"  android:layout_span="3"
                        android:padding="18dip" android:background="#b0b0b0"
                        android:textColor="#000"/>


                </TableRow>

                <!-- Row 2 with 3 columns -->


                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <TextView
                        android:id="@+id/TextView05" android:text="Row 2 column 1"
                        android:layout_weight="1" android:background="#dcdcdc"
                        android:textColor="#000000"
                        android:padding="20dip" android:gravity="center"/>

                    <TextView
                        android:id="@+id/TextView06" android:text="Row 2 column 2"
                        android:layout_weight="1" android:background="#d3d3d3"
                        android:textColor="#000000"
                        android:padding="20dip" android:gravity="center"/>

                    <TextView
                        android:id="@+id/TextView07" android:text="Row 2 column 3"
                        android:layout_weight="1" android:background="#cac9c9"
                        android:textColor="#000000"
                        android:padding="20dip" android:gravity="center"/>

                </TableRow>

                <!-- Row 3 with 2 columns -->
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/TextView08" android:text="Row 3 column 1"
                        android:layout_weight="1"  android:background="#b0b0b0"
                    android:textColor="#000000"
                    android:padding="18dip" android:gravity="center"/>

                    <TextView
                        android:id="@+id/TextView09" android:text="Row 3 column 2"
                        android:layout_weight="1" android:background="#a09f9f"
                        android:textColor="#000000"
                        android:padding="18dip" android:gravity="center"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
